<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_border_field_grey"
        android:backgroundTint="@color/dark2"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse"
            android:scaleType="fitXY"
            app:tint="@color/colorPrimaryLight"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/image_login" />
    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_logo"
        style="@style/title14"
        android:textSize="@dimen/_32sdp"
        android:text="Hello !!"/>

    <TextView
        android:id="@+id/tv_welcome"
        style="@style/title14"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:gravity=""
        android:layout_centerHorizontal="true"
        android:text="Welcome to Consignment app"
        android:textSize="@dimen/_24sdp" />

    <TextView
        android:id="@+id/tv_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_welcome"
        android:layout_width="@dimen/_250sdp"
        style="@style/title14"
        android:layout_height="wrap_content"
        android:text="Please input your business name"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_business"
        android:layout_width="@dimen/_270sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_input"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_4sdp">

        <EditText
            android:id="@+id/et_businessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:singleLine="true"
            android:background="@drawable/background_border"
            android:layout_margin="@dimen/_8sdp"
            android:hint="Business Name" />

    </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_saveBusiness"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_business"
            android:layout_centerInParent="true"
            android:text="Save" />
    </RelativeLayout>
</RelativeLayout>